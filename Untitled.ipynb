   "source": [
    "def bit_length(self):\n",
    "    s = bin(self)       # binary representation:  bin(-37) --> '-0b100101'\n",
    "    s = s.lstrip('-0b') # remove leading zeros and minus sign\n",
    "    return len(s) "
   ]
